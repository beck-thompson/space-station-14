<feedbackPopup:FeedbackEntry
    xmlns="https://spacestation14.io"
    xmlns:feedbackPopup="clr-namespace:Content.Client.FeedbackPopup"
    MinHeight="100">
    <PanelContainer StyleClasses="AngleRect" ModulateSelfOverride="#2b2b31"/>
    <BoxContainer Orientation="Vertical">

        <!-- Title -->
        <BoxContainer Orientation="Vertical" >
            <Control HorizontalExpand="True">
                <PanelContainer StyleClasses="DefaultBorderBottom"/>
                <RichTextLabel Name="TitleLabel" HorizontalAlignment="Left" Margin="12 0 6 0"/>
            </Control>
        </BoxContainer>

        <!-- Description -->
        <RichTextLabel Name="DescriptionLabel" StyleClasses="LabelLight" Margin="12 4 12 8" VerticalExpand="True"/>

        <!-- Footer -->
        <Control HorizontalExpand="True">
            <PanelContainer StyleClasses="DefaultBorderTop"/>
            <BoxContainer Orientation="Horizontal" HorizontalExpand="True">
                <Label FontColorOverride="#b1b1b2" StyleClasses="LabelSmall" Name="TypeLabel" Text="{Loc feedbackpopup-control-ui-type }" Margin="14 6 6 6"/>
                <Control HorizontalExpand="True"/>
                <Button Name="LinkButton" Text="{Loc feedbackpopup-control-button-text}" MinWidth="80" Margin="8 6 14 6" />
            </BoxContainer>
        </Control>
    </BoxContainer>
</feedbackPopup:FeedbackEntry>
