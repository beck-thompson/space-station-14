<Control
    xmlns="https://spacestation14.io"
    MouseFilter="Stop">
    <BoxContainer Orientation="Vertical">
        <!-- Header -->
        <BoxContainer Margin="5 5 5 5">
            <RichTextLabel Name="TitleLabel" HorizontalExpand="True" />
            <Button Name="ExpandButton" Text="{Loc 'feedbackpopup-control-show-more-button'}" />
        </BoxContainer>
        <!-- Description and button link -->
        <BoxContainer Name="DescriptionBox" Orientation="Vertical" Margin="5 5 5 5" Visible="False" />
    </BoxContainer>
</Control>
