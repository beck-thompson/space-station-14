<Control xmlns="https://spacestation14.io">
    <BoxContainer Orientation="Vertical">
        <!-- Header -->
        <BoxContainer Margin="5 5 5 5"   >
            <RichTextLabel Name="TitleLabel" />
        </BoxContainer>
        <!-- Description and button link -->
        <BoxContainer Name="DescriptionBox" Orientation="Vertical" Margin="5 5 5 5" Visible="False" />
        <Button Name="ExpandButton" Text="{Loc 'feedbackpopup-control-show-more-button'}" MinWidth="150" MaxWidth="250" HorizontalExpand="True" HorizontalAlignment="Center" />
    </BoxContainer>
</Control>
