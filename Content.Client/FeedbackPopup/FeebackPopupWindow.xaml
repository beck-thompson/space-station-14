<controls:FancyWindow xmlns="https://spacestation14.io"
                      xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
                      xmlns:graphics="clr-namespace:Robust.Client.Graphics;assembly=Robust.Client"
                      Title="{Loc feedbackpopup-window-name}" MinSize="510 460" RectClipContent="True">
        <BoxContainer Orientation="Vertical" VerticalExpand="True">

            <!-- main box area -->
            <Control Margin="12" VerticalExpand="True">
                <PanelContainer HorizontalExpand="True" VerticalExpand="True" StyleClasses="InsetBackground"/>
                <ScrollContainer HScrollEnabled="False" HorizontalExpand="True" VerticalExpand="True">
                    <BoxContainer Name="NotificationContainer" Orientation="Vertical" Margin="10" SeparationOverride="10">
                    </BoxContainer>
                </ScrollContainer>
            </Control>

            <!-- Footer -->
            <Control SetHeight="30" Margin="2 0 0 0">
                <PanelContainer Name="FooterPanel">
                    <PanelContainer.PanelOverride>
                        <graphics:StyleBoxFlat BorderColor="#5A5A5A" BorderThickness="0 2 0 0" />
                    </PanelContainer.PanelOverride>
                </PanelContainer>
                <BoxContainer HorizontalExpand="True" SetHeight="33">
                    <Label Text="{Loc feedbackpopup-control-ui-footer}" VerticalAlignment="Center" Margin="6 0" StyleClasses="PdaContentFooterText"/>
                    <Control HorizontalExpand="True"/>
                    <Label Name="NumNotifications" VerticalAlignment="Center" Margin="6 0"/>
                </BoxContainer>
            </Control>
    </BoxContainer>
</controls:FancyWindow>
