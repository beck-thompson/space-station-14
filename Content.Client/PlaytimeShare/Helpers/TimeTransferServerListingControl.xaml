<Control xmlns="https://spacestation14.io"
         xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
         xmlns:graphics="clr-namespace:Robust.Client.Graphics;assembly=Robust.Client" HorizontalExpand="True">
    <PanelContainer Name="ServerListingContainer" Margin="5" HorizontalExpand="True" HorizontalAlignment="Stretch">
        <PanelContainer.PanelOverride>
            <graphics:StyleBoxFlat BackgroundColor="#373742" />
        </PanelContainer.PanelOverride>
            <BoxContainer Orientation="Horizontal" Margin="10 10 10 10">
                <BoxContainer Orientation="Vertical" HorizontalExpand="True">
                    <BoxContainer>
                        <Label Text="{Loc 'time-transfer-admin-control-view-name'}" Margin="0 0 5 0"  />
                        <RichTextLabel Name="NameLabel" />
                    </BoxContainer>
                    <BoxContainer Margin="10 0 0 0">
                        <Label Text="{Loc 'time-transfer-admin-control-view-public-key'}" Margin="0 0 5 0"  />
                        <RichTextLabel Name="PublicKeyLabel" />
                    </BoxContainer>
                    <BoxContainer Margin="10 0 0 0">
                        <Label Text="{Loc 'time-transfer-admin-control-view-enabled'}" Margin="0 0 5 0" />
                        <RichTextLabel Name="EnabledLabel" />
                    </BoxContainer>
                </BoxContainer>
                <!-- option buttons -->
                <BoxContainer Orientation="Vertical" SetWidth="75">
                    <Button Name="EditButton" Text="Edit" Access="Public" />
                    <controls:ConfirmButton Name="DeleteButton" Text="Delete" Access="Public" />
                </BoxContainer>
            </BoxContainer>
    </PanelContainer>
</Control>
