<DefaultWindow xmlns="https://spacestation14.io"
    xmlns:viewport="clr-namespace:Content.Client.Viewport"
    Title="{Loc admin-camera-window-title-placeholder}"
    MinSize="400 400">
    <BoxContainer Orientation="Vertical" VerticalExpand="True">
        <Control VerticalExpand="True" HorizontalExpand="True" Margin="5 5 5 5" Name="CameraViewBox">
            <viewport:ScalingViewport Name="CameraView"
                                      VerticalExpand="True"
                                      HorizontalExpand="True"
                                      MinSize="400 400"
                                      MouseFilter="Ignore" />
        </Control>
        <BoxContainer Orientation="Horizontal">
            <Button StyleClasses="OpenRight" Name="FollowButton" HorizontalExpand="True" Access="Public" Text="{Loc 'admin-camera-window-follow'}" />
            <Button StyleClasses="OpenLeft" Name="PopoutButton" HorizontalExpand="True" Access="Public" Text="{Loc 'admin-camera-window-pop-out'}" />
        </BoxContainer>
    </BoxContainer>
</DefaultWindow>
